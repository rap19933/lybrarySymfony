{% trans_default_domain 'FOSUserBundle' %}

<h5 class="tb-title">{{ 'login'|trans }}</h5>
{% if error %}
    <p style="color: red">{{ error.messageKey|trans(error.messageData, 'security') }}</p>
{% endif %}
<form action="{{ path("fos_user_security_check") }}" method="post" class="cendo">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}

    <p class="checkout-coupon top log a-an">
        <label class="l-contact" for="username">
            {{ 'security.login.username'|trans }}
            <em>*</em>
        </label>
        <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
    </p>
    <p class="checkout-coupon top-down log a-an" for="password">
        <label class="l-contact">
            {{ 'security.login.password'|trans }}
            <em>*</em>
        </label>
        <input type="password" id="password" name="_password" required="required" />
    </p>

    <div class="forgot-password1">
        <label class="inline2" for="remember_me">
            <input type="checkbox" id="remember_me" name="_remember_me" value="on" >
            {{ 'security.login.remember_me'|trans }} <em>*</em>
        </label>
        <a class="forgot-password" href="{{ path('fos_user_registration_register') }}">{{ 'registration.submit'|trans }}?</a>
    </div>
    <div class="col-md-12">
        <div class="buttons">
            <div class="pull-right">
                <input type="submit" class="btn btn-primary" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
            </div>
        </div>
        <a class="btn btn-primary pull-left" href="{{ path('book_index') }}">{{ 'back'|trans }}</a>
    </div>
</form>
