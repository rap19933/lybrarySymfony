<footer class="re-footer-section">
    <!-- footer-bottom area start -->
    <div class="footer-bottom">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 text-center">
                    <p>&copy; 2018 Devitems. All Rights Reserved.</p>
                </div>
            </div>
        </div>
    </div>
    <!-- footer-bottom area end -->
</footer>
<!-- footer section end -->

