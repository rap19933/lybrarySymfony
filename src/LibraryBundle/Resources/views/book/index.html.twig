{% extends '::base.html.twig' %}
{% block title %}{{ 'home'|trans }}{% endblock %}

{% block body %}
    <section class="pages products-page section-padding-top">
        <div class="container">
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="features-tab">
                        <!-- Tab panes -->
                        <div class="tab-content">
                            <div class="row">
                                {% for book in books %}
                                    <div class="col-md-3 col-lg-3 col-sm-6">
                                        <div class="single-product">

                                            <div class="product-img">
                                                {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                                                    {% if book.user.id == app.user.id %}
                                                        <div class="pro-type">
                                                            <span>{{ 'my'|trans }}</span>
                                                        </div>
                                                    {% endif %}
                                                {% endif %}
                                                {% if book.cover %}
                                                    <img class="secondary-image" alt="Product Title" src="{{ asset(cover_directory ~book.cover) }}" {{ show_img() }}>
                                                {% else %}
                                                    <img class="secondary-image" alt="Product Title" src="{{ asset('img/nocover.jpg') }}" {{ show_img() }}>
                                                {% endif %}
                                            </div>

                                            <div class="product-dsc">
                                                <h3>
                                                    <a href="{{ path('book_show', { 'id': book.id }) }}">{{ 'name_book'|trans }} {{ book.name }}</a>
                                                </h3>
                                                <div class="star-price">
                                                    <span class="price-left">{{ 'author'|trans }} {{ book.author }}</span>
                                                </div>
                                            </div>

                                            <div class="actions-btn">
                                                <a href="{{ path('book_show', { 'id': book.id }) }}" data-original-title="{{ 'view_books'|trans }}">
                                                    <i class="fa fa-eye"></i>
                                                </a>
                                                {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                                                    <a data-placement="top" data-toggle="tooltip" href="{{ path('book_edit', { 'id': book.id }) }}" data-original-title="{{ 'edit'|trans }}">
                                                        <i class="fa fa-pencil-square-o"></i>
                                                    </a>
                                                {% endif %}

                                                {% if book.allowDownload and book.bookFile %}
                                                    <a href="{{ asset(book_directory ~book.bookFile) }}" target="_blank" download="" data-original-title="{{ 'download'|trans }}"><i class="fa fa-cloud-download"></i></a>
                                                {% endif %}
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                             </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    {# display navigation #}
    <div class="navigation">
        {{ knp_pagination_render(books) }}
    </div>
{% endblock %}
